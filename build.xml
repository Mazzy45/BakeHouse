<?xml version="1.0" encoding="UTF-8"?>
<project name="BakeHouse" default="run" basedir=".">
    <target name="compile">
        <javac srcdir="src" destdir="build/classes" />
    </target>

    <target name="run" depends="compile">
        <java classname="bakehouse.view.MainGUI" fork="true">
            <classpath>
                <path path="build/classes" />
            </classpath>
        </java>
    </target>
</project>
